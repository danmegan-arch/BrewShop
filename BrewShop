// Show current year
document.getElementById("year").textContent = new Date().getFullYear();

// Simple BrewBot chatbot
function sendMessage() {
  const chatInput = document.getElementById("chatInput");
  const chatLog = document.getElementById("chatLog");
  const userMsg = chatInput.value.trim();

  if (userMsg === "") return;

  chatLog.innerHTML += `<p><strong>You:</strong> ${userMsg}</p>`;

  let botReply = "Thanks! A barista will get back to you soon.";
  const lower = userMsg.toLowerCase();

  if (lower.includes("open") || lower.includes("hours")) {
    botReply = "We're open Mon‚ÄìFri 7:30‚Äì5pm, Sat‚ÄìSun 8:30‚Äì4pm!";
  } else if (lower.includes("wifi")) {
    botReply = "Yes! Free Wi-Fi for all customers ‚Äî just ask at the counter.";
  } else if (lower.includes("vegan")) {
    botReply = "We offer oat, almond, and soy milk at no extra cost.";
  } else if (lower.includes("location") || lower.includes("where")) {
    botReply = "We're at 12 Market Street, Dublin ‚Äî next to the bookshop.";
  }

  chatLog.innerHTML += `<p><strong>BrewBot:</strong> ${botReply}</p>`;
  chatInput.value = "";
  chatLog.scrollTop = chatLog.scrollHeight;
}
